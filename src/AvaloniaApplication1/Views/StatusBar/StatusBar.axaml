<UserControl x:Class="AvaloniaApplication1.Views.StatusBar" xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:AvaloniaApplication1" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AvaloniaApplication1.ViewModels" d:DesignHeight="450"
             d:DesignWidth="800" x:DataType="vm:StatusBarViewModelForDesigner"
             mc:Ignorable="d">
    <Design.DataContext>
        <vm:StatusBarViewModelForDesigner />
    </Design.DataContext>
    <UserControl.DataContext>
        <vm:StatusBarViewModel />
    </UserControl.DataContext>

    <TextBlock Text="{Binding Status}" />
</UserControl>
